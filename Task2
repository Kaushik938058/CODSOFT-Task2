<body>

<div class="game-card">
    <h1>✨ Tic-Tac-Toe AI ✨</h1>
    <p class="subtitle">Challenge the AI and test your skills</p>

    <div class="difficulty-container">
        <span>Difficulty:</span>
        <button class="diff-btn" onclick="setDifficulty('easy')">Easy</button>
        <button class="diff-btn" onclick="setDifficulty('medium')">Medium</button>
        <button class="diff-btn active" onclick="setDifficulty('hard')">Hard</button>
    </div>

    <div class="status" id="status">Your Turn (X)</div>

    <div class="grid" id="grid">
        </div>

    <div class="scoreboard">
        <div class="score-item">YOU <span id="score-you">0</span></div>
        <div class="score-item">DRAWS <span id="score-draw">0</span></div>
        <div class="score-item">AI <span id="score-ai">0</span></div>
    </div>
</div>

<script>
    const board = Array(9).fill(null);
    const human = 'X';
    const ai = 'O';
    let currentPlayer = human;
    let difficulty = 'hard';
    let gameActive = true;
    const scores = { you: 0, draws: 0, ai: 0 };

    const gridElement = document.getElementById('grid');
    const statusElement = document.getElementById('status');
    
    // Initialize Grid
    function initGrid() {
        gridElement.innerHTML = '';
        board.fill(null);
        gameActive = true;
        currentPlayer = human;
        statusElement.innerText = `Your Turn (${human})`;
        
        board.forEach((_, index) => {
            const cell = document.createElement('div');
            cell.classList.add('cell');
            cell.dataset.index = index;
            cell.addEventListener('click', handleCellClick);
            gridElement.appendChild(cell);
        });
    }

    function setDifficulty(level) {
        difficulty = level;
        document.querySelectorAll('.diff-btn').forEach(btn => btn.classList.remove('active'));
        event.target.classList.add('active');
        initGrid(); // Reset game on difficulty change
    }

    function handleCellClick(e) {
        const index = e.target.dataset.index;
        if (board[index] || !gameActive || currentPlayer !== human) return;

        makeMove(index, human);
        
        if (gameActive) {
            currentPlayer = ai;
            statusElement.innerText = "AI is thinking...";
            setTimeout(aiMove, 500); // Small delay for realism
        }
    }

    function makeMove(index, player) {
        board[index] = player;
        const cell = gridElement.children[index];
        cell.innerText = player;
        cell.classList.add(player.toLowerCase());

        const winner = checkWin(board);
        if (winner) {
            endGame(winner);
        } else if (board.every(cell => cell)) {
            endGame('draw');
        } else {
            currentPlayer = player === human ? ai : human;
            if(currentPlayer === human) statusElement.innerText = `Your Turn (${human})`;
        }
    }

    function aiMove() {
        let move;
        if (difficulty === 'easy') {
            move = getRandomMove();
        } else if (difficulty === 'medium') {
            // 50% chance of random, 50% chance of best move
            move = Math.random() > 0.5 ? getBestMove() : getRandomMove();
        } else {
            move = getBestMove(); // Unbeatable Minimax
        }
        makeMove(move, ai);
    }

    function getRandomMove() {
        let available = board.map((v, i) => v === null ? i : null).filter(v => v !== null);
        return available[Math.floor(Math.random() * available.length)];
    }

    // --- Minimax Algorithm (The Brain) ---
    function getBestMove() {
        let bestScore = -Infinity;
        let move;
        for (let i = 0; i < 9; i++) {
            if (board[i] === null) {
                board[i] = ai;
                let score = minimax(board, 0, false);
                board[i] = null;
                if (score > bestScore) {
                    bestScore = score;
                    move = i;
                }
            }
        }
        return move;
    }

    function minimax(board, depth, isMaximizing) {
        let result = checkWin(board);
        if (result === ai) return 10 - depth;
        if (result === human) return depth - 10;
        if (board.every(cell => cell)) return 0;

        if (isMaximizing) {
            let bestScore = -Infinity;
            for (let i = 0; i < 9; i++) {
                if (board[i] === null) {
                    board[i] = ai;
                    let score = minimax(board, depth + 1, false);
                    board[i] = null;
                    bestScore = Math.max(score, bestScore);
                }
            }
            return bestScore;
        } else {
            let bestScore = Infinity;
            for (let i = 0; i < 9; i++) {
                if (board[i] === null) {
                    board[i] = human;
                    let score = minimax(board, depth + 1, true);
                    board[i] = null;
                    bestScore = Math.min(score, bestScore);
                }
            }
            return bestScore;
        }
    }

    function checkWin(board) {
        const wins = [
            [0,1,2], [3,4,5], [6,7,8], // Rows
            [0,3,6], [1,4,7], [2,5,8], // Cols
            [0,4,8], [2,4,6]           // Diagonals
        ];
        for (let combo of wins) {
            if (board[combo[0]] && board[combo[0]] === board[combo[1]] && board[combo[0]] === board[combo[2]]) {
                return board[combo[0]];
            }
        }
        return null;
    }

    function endGame(winner) {
        gameActive = false;
        if (winner === 'draw') {
            statusElement.innerText = "It's a Draw!";
            scores.draws++;
            document.getElementById('score-draw').innerText = scores.draws;
        } else {
            statusElement.innerText = winner === human ? "You Won!" : "AI Won!";
            if (winner === human) {
                scores.you++;
                document.getElementById('score-you').innerText = scores.you;
            } else {
                scores.ai++;
                document.getElementById('score-ai').innerText = scores.ai;
            }
        }
        setTimeout(initGrid, 2000); // Restart after 2 seconds
    }

    // Start Game
    initGrid();
</script>

</body>
</html>
